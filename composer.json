{
  "name": "keboola/db-extractor-common",
  "license": "MIT",
  "type": "library",
  "description": "Common library from Keboola Database Extractors",
  "authors": [
    {
      "name": "keboola",
      "email": "devel@keboola.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "keboola/csv": "^2.0",
    "keboola/datadir-tests": "^2.1",
    "keboola/php-component": "^5.0",
    "keboola/php-datatypes": "^3.2",
    "keboola/php-utils": "^2.3",
    "keboola/ssh-tunnel": "^2.0",
    "monolog/monolog": "^1.23",
    "nette/utils": "^2.5",
    "symfony/config": "^4.1",
    "symfony/process": "^4.1",
    "symfony/serializer": "^4.1",
    "vkartaviy/retry": "^0.2"
  },
  "require-dev": {
    "aws/aws-sdk-php": "^3.67",
    "phpunit/phpunit": "^7.3",
    "keboola/coding-standard": "^6.0",
    "symfony/finder": "^4.1",
    "phpstan/phpstan-shim": "^0.10"
  },
  "autoload": {
    "psr-4": {
      "Keboola\\DbExtractorCommon\\": "src/",
      "Keboola\\DbExtractorCommon\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "old-tests": "./wait-for-it.sh mysql:3306 -t 30 -- ./vendor/bin/phpunit tests/Old",
    "tests-datadir": "./wait-for-it.sh mysql:3306 -t 30 -- ./vendor/bin/phpunit tests/Functional",
    "tests-unit": "./vendor/bin/phpunit tests/Unit",
    "tests": [
      "@tests-datadir",
      "@old-tests"
    ],
    "phpstan": "phpstan analyse --no-progress --level=max ./src ./tests -c phpstan.neon",
    "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
    "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
    "build": [
      "@phpcs",
      "@phpstan",
      "@tests"
    ],
    "ci": [
      "@composer validate --no-check-all --strict",
      "@build"
    ]
  },
  "config": {
    "sort-packages": true
  }
}
